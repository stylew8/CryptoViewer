@model CryptoViewer.MVC.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<link rel="stylesheet" href="~/css/Profile/Profile.css" />

<h2 class="profile-title">Profile information</h2>

<div class="profile-container">
    <div class="container-auth">
        <form class="auth-form" action="/submit_update_profile" method="POST">
            <div class="form-group">
                <label for="firstname">First Name</label>
                <input type="text" id="firstname" name="FirstName" value="@Model.FirstName" required>
            </div>
            <div class="form-group">
                <label for="lastname">Last Name</label>
                <input type="text" id="lastname" name="LastName" value="@Model.LastName" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="Email" value="@Model.Email" required>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" id="address" name="Address" value="@Model.Address" required>
            </div>
            <input value="@Model.Id" name="Id" type="hidden"/>

            <div class="form-button">
                <input type="submit" value="Save changes">
            </div>
        </form>
    </div>
    <div class="container-wallet">
        <img src="~/Images/cashback-in-wallet.png"/>
        <h1>Your wallet</h1>
        <h2>0.00$</h2>
    </div>
</div>

